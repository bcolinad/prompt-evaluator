# ── LLM Provider (Google Gemini — primary) ────────────
# Place your Google service-account JSON at: src/agent/nodes/google-key.json
# Get credentials: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_MODEL=gemini-2.5-flash
GOOGLE_PROJECT=example-project-1
GOOGLE_LOCATION=us-central1
# Thinking budget for Gemini 2.5 (tokens). 0=disable, -1=dynamic
GOOGLE_THINKING_BUDGET=2048

# ── LLM Provider (Anthropic — fallback) ──────────────
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ── LangSmith ─────────────────────────────────────────
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=prompt-evaluator

# ── Database ──────────────────────────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prompt_evaluator

# ── LLM Provider (Ollama — self-hosted fallback) ──
OLLAMA_CHAT_MODEL=qwen2.5:1.5b

# ── Embeddings (Ollama — self-hosted, free) ──
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768
SIMILARITY_THRESHOLD=0.75
MAX_SIMILAR_RESULTS=5

# ── Auth ─────────────────────────────────────────────
AUTH_ENABLED=true
AUTH_SECRET_KEY=change-me-in-production
AUTH_ADMIN_EMAIL=admin@prompteval.dev
AUTH_ADMIN_PASSWORD=evaluator2026

# ── LLM Shared ───────────────────────────────────────
LLM_MAX_TOKENS=16384
LLM_REQUEST_TIMEOUT=120

# ── Evaluation Pipeline ──────────────────────────────
# Number of times to execute each prompt for reliability (2-5)
DEFAULT_EXECUTION_COUNT=2

# ── Document Processing ─────────────────────────────
# Maximum file size for document uploads (bytes). Default: 100MB
DOC_MAX_FILE_SIZE=104857600
# Chunk size for document splitting (characters). Default: 1000
DOC_CHUNK_SIZE=1000
# Overlap between chunks (characters). Default: 200
DOC_CHUNK_OVERLAP=200
# Max chunks to retrieve per RAG query. Default: 5
DOC_MAX_CHUNKS_PER_QUERY=5
# Enable LLM-based entity extraction from documents. Default: true
DOC_ENABLE_EXTRACTION=true
# LLM model for entity extraction. Default: gemini-2.5-flash
DOC_EXTRACTION_MODEL=gemini-2.5-flash

# ── PDF OCR Fallback ─────────────────────────────────
# Enable tiered OCR fallback for scanned/image-based PDFs. Default: true
PDF_OCR_ENABLED=true
# Minimum extracted characters before triggering OCR fallback. Default: 50
PDF_OCR_MIN_TEXT_CHARS=50

# ── App Settings ──────────────────────────────────────
APP_ENV=development
LOG_LEVEL=INFO
